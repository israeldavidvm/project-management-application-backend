{
    "openapi": "3.0.0",
    "info": {
        "title": "API del sitio",
        "description": "API para el manejo de datos del sitio",
        "contact": {
            "name": "Israel David Villaroel Moreno",
            "email": "israeldavidvm@gmail.com"
        },
        "license": {
            "name": "Licencia abierta",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0.0"
    },
    "paths": {
        "/api/v1/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Authenticates a user and generate a Bearer Token",
                "operationId": "a7997e7c1e3bfed64d4e56de82415931",
                "requestBody": {
                    "description": "User Credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "israeldavidvm@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[.$%@!&*+]).*$",
                                        "example": "Password1234."
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Login successful"
                                        },
                                        "userData": {
                                            "$ref": "#/components/schemas/User"
                                        },
                                        "access_token": {
                                            "type": "string",
                                            "example": "2|Cfz3yDjKqUh55AUI6I9nQQv6MEHsEqQvJToMDnJ7e7c8478a"
                                        },
                                        "type_token": {
                                            "type": "string",
                                            "example": "Bearer"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sactum": []
                    }
                ]
            }
        },
        "/api/v1/auth/me": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Retrieve authenticated user data.",
                "description": "Returns the information of the currently authenticated user.",
                "operationId": "725c3ad8721db6086fceb9067802a3d3",
                "responses": {
                    "200": {
                        "description": "Successful response (OK)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Successfully retrieved user data."
                                        },
                                        "userData": {
                                            "$ref": "#/components/schemas/User"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Unauthorized."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/v1/auth/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Log out.",
                "description": "Logs out the current user session by revoking the access token.",
                "operationId": "f6b8957b4c0b25636613a9f0512a8ba9",
                "responses": {
                    "200": {
                        "description": "Successful response (OK)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Session closed successfully."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Unauthorized."
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Error logging out: [error message]"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "sanctum": []
                    }
                ]
            }
        },
        "/api/v1/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Create a new user.",
                "description": "Registers a new user in the database with provided credentials, automatically assigning the \"desarrollador\" role.",
                "operationId": "b9e746d77661fb8df55d0ac63e1ece77",
                "requestBody": {
                    "description": "New user data",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User created successfully (Created)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User created successfully."
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/User"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Unprocessable Entity",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Could not create user, please check the entered data."
                                        },
                                        "errors": {
                                            "type": "object",
                                            "example": {
                                                "email": [
                                                    "The email has already been registered."
                                                ]
                                            }
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/users": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Listar usuarios (Filtro por rol)",
                "description": "Si el usuario autenticado es Administrador, retorna todos los usuarios. Si es Desarrollador, retorna solo otros desarrolladores.",
                "operationId": "12e989554c281d650dff75443acabf54",
                "responses": {
                    "200": {
                        "description": "Lista de usuarios obtenida exitosamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/UserResource"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "No autorizado"
                    },
                    "403": {
                        "description": "Prohibido (Acceso denegado a ciertos roles)"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "post": {
                "tags": [
                    "Users (Admin CRUD)"
                ],
                "summary": "Crear un nuevo usuario (Solo Admin)",
                "description": "Crea un nuevo usuario. (Solo Admin, gestionado por Policy)",
                "operationId": "64da9b5a20fa4f20e947ed61b2bbb6da",
                "requestBody": {
                    "description": "Datos requeridos para la creación del usuario",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "role"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Juan Pérez"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "juan.perez@dominio.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "minLength": 8,
                                        "example": "MiContraseñaSegura123"
                                    },
                                    "role": {
                                        "type": "string",
                                        "enum": [
                                            "administrator",
                                            "developer"
                                        ],
                                        "example": "developer"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuario creado exitosamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserResource"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "No autorizado"
                    },
                    "403": {
                        "description": "Prohibido (Solo administradores)"
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/users/developers": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Obtener solo usuarios con rol de Desarrollador",
                "description": "Obtiene una lista de todos los usuarios con el rol 'desarrollador'.\nÚtil para selectores de asignación de tareas.",
                "operationId": "84d3048e4632769a38801eed1fbee93e",
                "responses": {
                    "200": {
                        "description": "Lista de desarrolladores obtenida exitosamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/UserResource"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "No autorizado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/users/admins": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Obtener solo usuarios con rol de Administrador",
                "description": "Obtiene una lista de todos los usuarios con el rol 'administrador'.\nÚtil para selectores de escalamiento o contacto.",
                "operationId": "ef5270a7fbdf832dd920b293c4a036b3",
                "responses": {
                    "200": {
                        "description": "Lista de administradores obtenida exitosamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/UserResource"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "No autorizado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/v1/users/{user}": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Mostrar un usuario específico",
                "description": "Muestra un usuario específico. (Puede usarse por el propio usuario o admin)",
                "operationId": "919fd317e275a070bcadcf4874123e45",
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "description": "ID del usuario a mostrar",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuario encontrado",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserResource"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "No autorizado"
                    },
                    "404": {
                        "description": "Usuario no encontrado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "put": {
                "tags": [
                    "Users (Admin CRUD)"
                ],
                "summary": "Actualizar un usuario (Solo Admin)",
                "description": "Actualiza un usuario específico. (Solo Admin, excluye a sí mismo, gestionado por Policy)",
                "operationId": "df2f483fc27e7b42e89953bad0cf1485",
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "description": "ID del usuario a actualizar",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "requestBody": {
                    "description": "Datos a actualizar para el usuario. La contraseña es opcional.",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Juan Pablo"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "juan.pablo@dominio.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "minLength": 8,
                                        "example": "NuevaContraseña123",
                                        "nullable": true
                                    },
                                    "role": {
                                        "type": "string",
                                        "enum": [
                                            "administrator",
                                            "developer"
                                        ],
                                        "example": "administrator"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuario actualizado exitosamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/UserResource"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "No autorizado"
                    },
                    "403": {
                        "description": "Prohibido (Admin no puede auto-actualizarse el rol)"
                    },
                    "422": {
                        "description": "Error de validación"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "Users (Admin CRUD)"
                ],
                "summary": "Eliminar un usuario (Solo Admin)",
                "description": "Elimina un usuario específico. (Solo Admin, excluye a sí mismo, gestionado por Policy)",
                "operationId": "17c42665206652a0fd309e2f348f97ed",
                "parameters": [
                    {
                        "name": "user",
                        "in": "path",
                        "description": "ID del usuario a eliminar",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Usuario eliminado exitosamente (Sin contenido)"
                    },
                    "401": {
                        "description": "No autorizado"
                    },
                    "403": {
                        "description": "Prohibido (Admin no puede auto-eliminarse)"
                    },
                    "404": {
                        "description": "Usuario no encontrado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "UserResource": {
                "title": "Salida de Usuario (Resource)",
                "description": "Estructura de datos para representar un usuario en la respuesta de la API.",
                "properties": {
                    "id": {
                        "description": "ID único del usuario.",
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "description": "Nombre completo.",
                        "type": "string",
                        "example": "Alice Smith"
                    },
                    "email": {
                        "description": "Correo electrónico.",
                        "type": "string",
                        "format": "email",
                        "example": "alice.smith@example.com"
                    },
                    "role": {
                        "description": "Rol del usuario.",
                        "type": "string",
                        "example": "administrador"
                    },
                    "email_verified_at": {
                        "description": "Marca de tiempo de verificación de email.",
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-10-27T10:00:00.000000Z",
                        "nullable": true
                    },
                    "created_at": {
                        "description": "Fecha de creación.",
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-10-27T10:00:00.000000Z"
                    },
                    "updated_at": {
                        "description": "Fecha de última modificación.",
                        "type": "string",
                        "format": "date-time",
                        "example": "2023-10-27T11:30:00.000000Z"
                    }
                },
                "type": "object"
            },
            "User": {
                "title": "Modelo de Usuario",
                "description": "Representación del objeto Usuario en la base de datos, incluyendo su rol.",
                "required": [
                    "id",
                    "name",
                    "email",
                    "role"
                ],
                "properties": {
                    "id": {
                        "description": "ID único del usuario.",
                        "type": "integer",
                        "readOnly": true
                    },
                    "name": {
                        "description": "Nombre completo del usuario.",
                        "type": "string"
                    },
                    "email": {
                        "description": "Correo electrónico único.",
                        "type": "string",
                        "format": "email"
                    },
                    "role": {
                        "description": "Rol del usuario.",
                        "type": "string",
                        "enum": [
                            "administrador",
                            "desarrollador"
                        ]
                    },
                    "created_at": {
                        "description": "Fecha de creación del registro.",
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "description": "Fecha de la última actualización del registro.",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "sanctum": {
                "type": "http",
                "description": "Enter token in format (Bearer <token>) (Ejemplo: Bearer 2|Cfz3yDjKqUh55AUI6I9nQQv6MEHsEqQvJToMDnJ7e7c8478a)",
                "name": "Authorization",
                "in": "header",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Auth"
        },
        {
            "name": "Users",
            "description": "Users"
        },
        {
            "name": "Users (Admin CRUD)",
            "description": "Users (Admin CRUD)"
        }
    ]
}